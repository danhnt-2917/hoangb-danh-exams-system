<% provide :title, t(".title") %>
<h1><%= t(".title") %></h1>
<div class="text-right form-inline">
  <%= form_tag admin_exams_path, method: :get do %>
    <div class="form-group">
      <label>
        <%= t(".subject") %>
        <%= select_tag :subject,
        options_from_collection_for_select(subject_collection, :id, :name,
          params[:subject]), class: "form-control" %>
      </label>
    </div>
    <div class="form-group">
      <label>
        <%= t(".user") %>
        <%= select_tag :user,
        options_from_collection_for_select(user_collection, :id, :name,
          params[:user]), class: "form-control" %>
      </label>
    </div>
    <div class="form-group">
      <label>
        <%= t(".start_time") %>
        <%= date_field_tag :start_time, params[:start_time], class: "form-control" %>
      </label>
    </div>
    <div class="form-group">
      <label>
        <%= submit_tag t(".button_search"), class: "btn btn-primary" %>
      </label>
    </div>
  <% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(".subject") %></th>
      <th><%= t(".total_score") %></th>
      <th><%= t(".start_time") %></th>
      <th><%= t(".end_time") %></th>
      <th><%= t(".do_time") %></th>
      <th><%= t(".user") %></th>
      <th><%= t(".action") %></th>
    </tr>
  </thead>
  <tbody>
    <%= render(@exams) || t(".zero_exam") %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
